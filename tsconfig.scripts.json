{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": false,
    "allowImportingTsExtensions": true,
    "noEmit": false
  },
  "include": [
    "scripts/**/*.{ts,mts}",
    "registry/**/*.{ts,mts}"
  ],
  "exclude": [
    "node_modules"
  ]
}