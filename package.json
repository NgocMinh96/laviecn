{
  "name": "laviecn",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbo",
    "start": "next start",
    "registry:build": "shadcn build",
    "build:registry": "tsx --tsconfig ./tsconfig.scripts.json ./scripts/build-registry.mts",
    "registry:capture": "tsx --tsconfig ./tsconfig.scripts.json ./scripts/capture-registry.mts",
    "postinstall": "fumadocs-mdx",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prettier": "prettier --check \"./**/*.{js,jsx,ts,tsx,mdx}\"",
    "prettier:fix": "prettier --write \"./**/*.{js,jsx,ts,tsx,mdx}\"",
    "rm:all": "rm -rf node_modules .next out dist build",
    "migrate:radix": "npx shadcn@latest migrate radix",
    "re:build": "npm run rm:all && npm install && npm run build"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@hookform/resolvers": "^5.0.1",
    "@tsparticles/engine": "^3.8.1",
    "@tsparticles/react": "^3.0.0",
    "@tsparticles/slim": "^3.8.1",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "framer-motion": "^12.17.0",
    "fumadocs-core": "^15.5.1",
    "fumadocs-docgen": "^2.0.0",
    "fumadocs-mdx": "^11.6.7",
    "fumadocs-twoslash": "^3.1.3",
    "fumadocs-typescript": "^4.0.5",
    "fumadocs-ui": "^15.5.1",
    "jotai": "^2.12.3",
    "lucide-react": "^0.511.0",
    "motion": "^12.16.0",
    "next": "15.3.3",
    "npm-to-yarn": "^3.0.1",
    "puppeteer": "^24.10.1",
    "radix-ui": "^1.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.1",
    "react-resizable-panels": "^3.0.2",
    "react-use-measure": "^2.1.7",
    "rehype-pretty-code": "^0.14.1",
    "rehype-slug": "^6.0.0",
    "remark-code-import": "^1.2.0",
    "remark-math": "^6.0.0",
    "rimraf": "^6.0.1",
    "shadcn": "^2.6.0",
    "shiki": "^3.4.2",
    "tailwind-merge": "^3.3.0",
    "tsparticles": "^3.8.1",
    "tw-animate-css": "^1.3.3",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/mdx": "^2.0.13",
    "@types/node": "22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "eslint": "^8",
    "eslint-config-next": "15.3.1",
    "postcss": "^8.5.4",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^4.1.8",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "unist-builder": "^4.0.0"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "importOrder": [
      "^(react/(.*)$)|^(react$)",
      "^(next/(.*)$)|^(next$)",
      "<THIRD_PARTY_MODULES>",
      "",
      "^@workspace/(.*)$",
      "",
      "^types$",
      "^@/types/(.*)$",
      "^@/config/(.*)$",
      "^@/lib/(.*)$",
      "^@/hooks/(.*)$",
      "^@/components/ui/(.*)$",
      "^@/components/(.*)$",
      "^@/registry/(.*)$",
      "^@/styles/(.*)$",
      "^@/app/(.*)$",
      "",
      "^[./]"
    ],
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "decorators-legacy"
    ],
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ]
  }
}
